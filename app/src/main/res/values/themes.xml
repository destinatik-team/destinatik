<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Destinatik" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/colorSecondary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.Destinatik" parent="Base.Theme.Destinatik" />

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:windowBackground">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>